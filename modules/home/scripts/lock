#!/usr/bin/env bash

# Lock screen with Gruvbox colors
i3lock-color -n \
  -i ~/git/nix-config/assets/wallpaper-gibson-blur.png \
  --scale \
  --insidever-color=D7992180 \
  --ringver-color=D79921FF \
  \
  --insidewrong-color=cc241d80 \
  --ringwrong-color=cc241dFF \
  \
  --inside-color=1d202180 \
  --ring-color=98971aFF \
  --line-color=d79921FF \
  --dateoutline-color=98971aFF \
  --dateoutline-width=0 \
  --timeoutline-color=98971aFF \
  --timeoutline-width=0 \
  --layoutoutline-color=98971aFF \
  --layoutoutline-width=20 \
  --greeteroutline-color=98971aFF \
  --greeteroutline-width=0 \
  --separator-color=d79921FF \
  \
  --verif-color=D79921FF \
  --wrong-color=D79921FF \
  --keyhl-color=458588FF \
  --bshl-color=b16286FF \
  --time-color=b16286FF \
  --date-color=b16286FF \
  --layout-color=ebdbb2FF \
  --ring-width=12 \
  --radius=80 \
  \
  --greeter-text="$(hostname -s)" \
  --greeter-font="Fira Code Bold" \
  --greeter-size=40 \
  --greeter-color=458588FF \
  --greeter-pos="w/2:75" \
  \
  --wrong-text="oopsie" \
  --wrong-font="Fira Sans Bold" \
  --wrong-size=20 \
  --verif-text="checking" \
  --verif-font="Fira Sans Bold" \
  --verif-size=20 \
  --noinput-text="" \
  \
  --clock \
  --indicator \
  --date-pos="w/2:h-75" \
  --date-font="Fira Sans" \
  --date-size=24 \
  --time-pos="w/2:h-125" \
  --time-font="Fira Code" \
  --time-size=50 \
  --time-str="%H:%M:%S" \
  --date-str="%A, %m-%d-%Y"